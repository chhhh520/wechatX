.name{
  height: 40px;
  color:#999;
  background: #EEEEEE;
  width: 351rpx;
  padding:0px;
}
.name text{
	text-align: center;
	font: 12px/40px 宋体;
    overflow: hidden;
    display: block;
	width: 332rpx;
	text-overflow:ellipsis;
	white-space:nowrap;
	margin:0 auto;
}
.img-wrap{
	position: relative;
  height: 240px;
  overflow: hidden;
}
.item{
	float: left;
	padding:12rpx 9rpx 12rpx 14rpx;
}
.item-right{
	float: left;
	padding:12rpx 14rpx 12rpx 9rpx;
}
.item image, .item-right image{
	width: 332rpx;
	height: 470rpx;
	display: block;
	background:#EEE;
  padding: 10rpx 10rpx 0 10rpx;
  overflow: hidden
}
.count{
	background-color:rgba(0,0,0,.5);
	color:#fff;
	font-size:.6rem;
	padding:.1rem .17rem;
	text-align:center;
	position: absolute;
	bottom:0;
	right:10rpx;

}
.loading{
  padding: 80rpx 0; color: #999; width: 100%; text-align: center
}
.menu{
	width: 100%;
	height: 50px;
	/*background-color:#eee;*/
	white-space: nowrap;
	border-top:1px #eee solid;
}
.menu .active{
	color: #f37bb3;
}
.menu-item{
	display: inline-block;
	padding: 0 10px;
	margin: 6px;
	font: 14px/40px 宋体;
}
.displayNo{
  color: #C6C6C6;
  font-size: 12px;
   width: 100%; text-align: center; padding: 30rpx 0
}
